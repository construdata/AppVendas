<LoginPage>: #informar o mesmo nome da classe entre <>
    FloatLayout:
    	canvas: 
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            text: "CONTROLE DE VENDAS [color=#00CFDB]HASHTAG[/color]" #utilização do markup para formatação de texto tipo html
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": 0.9}
            size_hint: 0.8, 0.2
        TextInput:
            id: email_input
            hint_text:"E-mail"
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1
        TextInput:
            id: senha_input
            hint_text:"Senha"
            password: True #para mostrar **** no lugar da senha
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.1
        Label:
            id: mensagem_login
            text: "[color=#00CFDB]Faça seu login[/color]" #utilização do markup para formatação de texto tipo html
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": 0.4}
            size_hint: 0.8, 0.1
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png" #para sinalizar que o botão foi selecionado
            on_release: app.firebase.fazer_login(email_input.text, senha_input.text)
            text: "Faça seu login"
            pos_hint: {"right": 0.45, "top": 0.3}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png" #para sinalizar que o botão foi selecionado
            on_release: app.firebase.criar_conta(email_input.text, senha_input.text)
            text: "Criar Conta"
            pos_hint: {"right": 0.95, "top": 0.3}
            size_hint: 0.4, 0.2