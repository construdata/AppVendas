<TodasVendasPage>: #informar o mesmo nome da classe entre <>
    FloatLayout:
        canvas: 
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao_fino.png"
            pos_hint: {"right": 0.85, "top":0.95}
            size_hint: 0.7, 0.2
            text: "Total de Vendas: R$1"
            id: label_total_vendas
            markup: True #markup serve para utilizar fontes com cores diferentes
        
        #Lista de Vendas
        ScrollView:
            pos_hint: {"right": 1, "top":0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: lista_vendas
                spacing: 2, 2 #espaço em cima e embaixo
                size_hint_y: None #parametro obrigatório para utilizar o ScrollView
                heigth: self.minimum_height #parametro obrigatório para utilizar o ScrollView
                row_default_height: "90dp" #parametro obrigatório para utilizar o ScrollView
                row_force_default: True #parametro obrigatório para utilizar o ScrollView

        #Botão Voltar
        FloatLayout:
            pos_hint: {"right": 1, "top":0.12}
            size_hint: 1, 0.12
            canvas: 
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2, "top":0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.sair_todas_vendas("ajustespage") #on_release estara vinculada a uma função para mudar de tela